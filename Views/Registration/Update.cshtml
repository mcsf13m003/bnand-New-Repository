@model MvcMyOwn.Models.Customer
@{
    ViewBag.Title = "Update";
}


<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <title>Untitled Document</title>
    <link href="~/Content/my.css" rel="stylesheet" type="text/css" />
</head>
<body style="background-color:lightpink">
   
    <form action="/MyRegistration/UpdateVal/@Model.Id" method="post">
        <fieldset>
            <legend style="background-color:#FF0099; border:groove black 2px; font-size:30px">
                Update Customer Info
            </legend>
            <div style="padding:2% 4% 5% 7%">
                First Name:<br /><input type="text" name="fName" value="@Model.FirstName" /><br />
                <div style="margin-top:2%">Last Name:<br /><input type="text" name="lName" value="@Model.LastName" /><br /></div>
                <div style="margin-top:2%">Email: <br /><input type="text" name="mail" value="@Model.EmailId" /><br /></div>
                <div style="margin-top:2%">Password: <br /><input type="password" name="pass" value="@Model.Password" /><br /></div>
                <div><input type="submit" name="Save" value="Update Student" style="background-color:#FF6699; width:60px ;height:50px" /></div>
            </div>

        </fieldset>
    </form>
</body>
</html>