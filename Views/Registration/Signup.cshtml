@model MvcMyOwn.Models.Customer
@{
    ViewBag.Title = "Signup";
}
@section Scripts{  @Scripts.Render("~/bundles/jqueryval") }
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
<title>Untitled Document</title>
<link href="~/Content/my.css" rel="stylesheet" type="text/css"/>
</head>
<body style="background-color:lightpink">
<fieldset>
<legend style="background-color:#FF0099; border:groove black 2px; font-size:30px">Sign Up
</legend>
    <div style="padding:2% 4% 5% 7%">
        <div style="margin-top:2%">
            <form action="/Registration/Upload" method="post" enctype="multipart/form-data">

                <input type="file" name="image" />
                <input type="submit" value="upload" />
            </form>
        </div>
            @Html.BeginForm("Save", "Registration", FormMethod.Post) 
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <br/>
        <font size="2">
            @Html.LabelFor(model => model.FirstName)
            @this.Session["user_name"]
            <br />
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
            <div style="margin-top:2%">
                @Html.LabelFor(model => model.LastName)
                <br />
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
            <div style="margin-top:2%">
                @Html.LabelFor(model => model.EmailId)
                <br />
                @Html.EditorFor(model => model.EmailId)
                @Html.ValidationMessageFor(model => model.EmailId)
            </div>
            <div style="margin-top:2%">
                @Html.LabelFor(model => model.EmailId)
                <br />
                @Html.EditorFor(model => model.EmailId)
                @Html.ValidationMessageFor(model => model.EmailId)
            </div>
            <div style="margin-top:2%">
                @Html.LabelFor(model => model.Password)
                <br />
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div style="margin-top:2%">
                @Html.LabelFor(model => model.Password)
                <br />
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </font>
        <br/>
        <div>
            <input type="submit" name="Save" value="Save" style="background-color:#FF6699; width:60px ;height:50px" />
        </div>
        </div>
</fieldset> 
<div>
<img src="~/Images/634861502048934266.jpg" alt="image" width="1500px" height="300px"/>
</div>
</body>
</html>
